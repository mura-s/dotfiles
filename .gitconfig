[core]
  editor = vim
[user]
  name = Seiya Muramatsu
  email = seiya.muramatsu1@gmail.com
[color]
  ui = auto
[push]
  default = simple
[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
[ghq]
  root = ~/src
[url "git@github.com:"]
  pushinsteadof = https://github.com/
[diff]
  tool = opendiff
[merge]
  tool = opendiff
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
