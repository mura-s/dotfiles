[core]
	editor = vim
[user]
	name = Seiya Muramatsu
	email = seiya.muramatsu1@gmail.com
[color]
	ui = auto
[push]
	default = simple
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
[ghq]
  root = ~/src
[url "git@github.com:"]
	pushinsteadof = https://github.com/
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
